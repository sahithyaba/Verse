<!DOCTYPE html>
<html>
<!--head :: start-->

<head>
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Form Validation Link -->
  <script src="java script/validation.js"></script>

  <!-- font awsome icon link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">

  <link rel="stylesheet" href="./styles/login.css">

  <title>Login page</title>
</head>
<!--head :: end-->

<!--body :: start-->

<body>

  <main class="login-page">

    <section class="login-background">
      <img src="./resources/login_bg.jpg" />
    </section>

    <nav class="login-navigation-bar">

      <div class="logo-wrapper">
        <img src="./resources/logo.png" />
      </div>

      <div class="navigation-link">
        <a href="#">Search</a>
        <a href="#">Offer</a>
        <a href="#">About Us</a>
        <a href="#">Reach Us</a>
      </div>
      <div class="location-login-wrapper">
        <div class="location-search">
          <input type="text" placeholder="Location" />
        </div>

        <div class="login-wrapper">
          <div class="login-profile-icon">
            <i class="fa-solid fa-user"></i>
          </div>
          <div class="login-button">
            <a href="">Login</a>
          </div>
        </div>
      </div>



    </nav>


    <!--login form-->

    <section class="login-form">
      <form name="login" action="http://localhost:7000/Login" onsubmit="return validateLogin()" method="post">

        <div style="color:red;"> <%= msg %> </div>

        <h1 class="login-heading">Login</h1>
        
        <div class="input-fields">
          <input name="Email" type="text" placeholder="Username/Email" />
        </div>

        <div class="input-fields">
          <input name="Password" type="password" placeholder="Password" />
        </div>

        <div class="forget-password">
          <a href="">Forgot Password ?</a>
        </div>

        <div class="input-fields">
          <button class="" type="submit">Login</button>
        </div>

        <div class="registration">
          <label>Need an account?</label>
          <a href="#">Create Account</a>
        </div>

      </form>
    </section>
    <!--form :: end-->

  </main>

</body>
<!--body :: end-->

</html>